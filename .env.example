# Used by docker-compose (root-level)
# Passhroom DB
PASSHROOM_DB_PASSWORD=

# SMTP
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
SMTP_FROM_NAME=Passhroom

# Public base URL used in emails
# Example: https://passhroom.example.com
PASSHROOM_PUBLIC_BASE_URL=

# Optional (compose defaults to production/true).
# For local testing without an HTTPS proxy, you can set:
# NODE_ENV=development
# REQUIRE_HTTPS=false

# Required for admin session cookies (generate a long random value)
# Example: openssl rand -hex 32
COOKIE_SECRET=

# Admin dashboard (magic-link login)
ADMIN_ENABLED=true
ADMIN_LOGIN_TTL_MINUTES=10
ADMIN_SESSION_TTL_HOURS=12

# Comma-separated list of emails allowed to access /admin.
# Example: ADMIN_EMAIL_ALLOWLIST=me@example.com,other@example.com
ADMIN_EMAIL_ALLOWLIST=

# Optional additional guard for /admin routes.
# If set, you must include this header/value when loading /admin pages.
# ADMIN_REQUIRE_HEADER_NAME=X-Admin-Key
# ADMIN_REQUIRE_HEADER_VALUE=

# Optional tuning
TOKEN_TTL_MINUTES=10
CODE_TTL_MINUTES=5
REQUIRE_HTTPS=true
LOG_REDACT_PII=true
RESEND_COOLDOWN_SECONDS=60
MAX_MAGIC_ATTEMPTS=5

# Rate limiting
RL_IP_PER_MINUTE=10
RL_EMAIL_PER_MINUTE=3
RL_EMAIL_PER_HOUR=10
RL_CLIENT_PER_MINUTE=20

# Rate limit backend: auto|redis|db
RATE_LIMIT_BACKEND=auto
